.topcover
  .topcover__inner
    .topcover__inner--management
      %h2
        ユーザー情報の編集
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :Eメール
          = f.email_field :email, autofocus: true, autocomplete: "email", class:"user-input"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .field
          = f.label :新パスワード
          %i ( ※変更しない場合は空白　※6文字以上 )
          %br/
          = f.password_field :password, autocomplete: "new-password", class:"user-input"
          -# - if @minimum_password_length
          -#   %br/
          -#   %em
          -#     = @minimum_password_length
          -#     characters minimum
        .field
          = f.label :新パスワード再入力_※確認用
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class:"user-input"
        .field
          = f.label :旧パスワードの入力_※必須
          %br/
          = f.password_field :current_password, autocomplete: "current-password", class:"user-input"
        .actions
          = f.submit "Update", class:"logbtn"
      %p
        #{button_to "登録の削除", registration_path(resource_name), data: { confirm: "本当に削除してもよろしいですか？" }, method: :delete}
      = link_to "Back", :back
