%label
  = link_to mission_path(mission, :anchor => 'anchor') do
    .contents__content
      .picture
        -if mission.datetime >= Date.today
          %p.future= I18n.l(mission.datetime)
        -else
          %p.past= I18n.l(mission.datetime)
        -if mission.mission_type
          =image_tag "#{mission.mission_type}", size: "100x100"
        -else
          =image_tag "6", size: "100x100"
      .contents__content__mission
        %p.mission-name
          = "「#{mission.name}」"
        .contents__content__mission--text
          = mission.comment
